<% fragment ||= @fragment
popover_controls ||= false
@popover_controls ||= popover_controls
%>
<div class="fragment_type_<%= fragment.fragment_type.id %> fragment_view" id="fragment_<%= fragment.id %>_view">
	<%= raw(fragment.fragment_type.view_elements) %>
	
	<div class="hide <%= @popover_controls&&(can_edit_fragment?(fragment)||can_destroy_fragment?(fragment)) ? 'tooltip_content' : '' %>">
		<a class='close'>&times;</a>
		<%= render 'fragments/fragment_controls', remote_bool: true, fragment:fragment%>
	</div>
</div>