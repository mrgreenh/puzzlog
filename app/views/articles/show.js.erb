$(".article_view_container").fadeOut(function(){
	$("body").animate({
		backgroundColor:'<%= @page.theme.background_color %>'
	}, function(){
		$(".article_view_fragments_container .fragment_container").popover('hide');
	
		//Updating contents
		$(".article_view_fragments_container").html("<%= escape_javascript(render 'articles/fragments_with_contextual', fragments: @fragments)%>");
		$(".article_header").replaceWith("<%= escape_javascript(render 'articles/article_header') %>");
		
		$(".previous_page_link_container").html("<%= escape_javascript(render 'articles/previous_page_link')%>");
		$(".next_page_link_container").html("<%= escape_javascript(render 'articles/next_page_link')%>");
		
		//Puzzle resources
		<%= render 'fragments/fragments_filling_script' %>
		$("#fragments_styles").html("<%= escape_javascript(render 'common_partials/customizable_styles')%>");
		
		//Fragments initialization
		initializeAllFragments();
		
		$(".article_view_container").fadeIn(function(){
			//Fragments controls initialization
			initializeControlsPopovers();
			initializeArticleViewControls();
			
			//Social interactions re-initialized
                        //FB.init({xfbml:true})
			//twttr.widgets.load();
		});
	});
	
});

