<%
	@current_bag_id ||= "none"
%>

<ul class="nav nav-tabs nav-stacked" id="box_bags_sidebar_nav">
	<li<%= " class='active'" if @current_bag_id=="none" %>><%= link_to 'All', '/box', remote: true, id:"bag_none_link", class:"select_bag_link" %></li>
	<% current_user.bags.each do |bag| %>
		<li<%= " class='active'" if bag.id == @current_bag_id.to_i %>>
			<%= link_to bag.name, bag_path(bag), remote: true, id: "bag_#{bag.id}_link", class:"select_bag_link"%>
		</li>
	<% end %>
</ul>
<%= link_to new_bag_path, remote: true, class:"btn btn-small", id:"new_bag_button" do %>
	<i class="icon-black icon-plus"></i>
<% end %>