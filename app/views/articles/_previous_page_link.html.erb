<%
	if @page!=@article.pages.order('number ASC').first
		@previous_page = @article.pages.find_by_number(@page.number-1)
%>
	<%= link_to article_path(:page_number => @previous_page.number), remote:true, title:"View previous page", class:"previous_page_link" do %>
		< <%= @page.number-1 %>
	<% end %>
<% end %>
