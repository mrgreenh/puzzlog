<ul class="controls fragment-type-controls expanded-centered">
	<%if can_edit_fragment_type?(@fragment_type)%>
		<li>
			<%= link_to edit_fragment_type_path(@fragment_type), class:'btn btn-small btn-info' do %>
				<i class='icon-edit icon-white'></i> Edit
			<% end %>
		</li>
	<%end%>
	
	<%if can_destroy_fragment_type?(@fragment_type)%>
		<li>
			<%= link_to fragment_type_path(@fragment_type), method: :delete, confirm: "Are you sure to eliminate this fragment type? Related fragments will be broken but won't be erased", class:'btn btn-small btn-danger' do %>
				<i class="icon-trash icon-white"></i> Delete
			<% end %>
		</li>
	<%end%>
</ul>