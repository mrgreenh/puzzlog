<% provide :title, "#{@article.title} | #{@page.number}" %>
<div class="container container-fluid article_view_container">
	<div class="row">
		<div class="span2">
			<aside class="left_article_controls">
				<div class="controls_container span2 hidden-phone" data-spy="affix" data-offset-top="0">
					<ul class="pager">
					  <li class="previous_page_link_container"><%= render 'articles/previous_page_link'%></li>
					</ul>
					<nav>
						<ul class="nav nav-pills nav-stacked" id="chapters_outline">
							<% @article.chapters_outline.each do |chapter| %>
								<li>
									<%= link_to chapter[:chapter_title], article_path(:page_number => chapter[:page_number]), :remote => true %>									
								</li>
							<% end %>
						</ul>
					</nav>
				</div>
			</aside>
		</div>
		<div class="span8 article_content_container hanging_container">
			<div class="row">
				<div class="span8">
					<%= render 'articles/article_controls' %>
					<%= render 'articles/article_header'%>
				</div>
			</div>
			<article class="article_view_fragments_container row">
				<%= render 'articles/fragments_with_contextual', fragments: @fragments %>
			</article>
			<div class="row">
				<ul class="pager visible-phone">
					 <li class="previous_page_link_container" class="visible-phone"><%= render 'articles/previous_page_link'%></li>
					 <li class="next_page_link_container" class="visible-phone"><%= render 'articles/next_page_link'%></li>
				</ul>
			</div>
		</div>
		<div class="span2">
			<aside class="right_article_controls">
				<div class="controls_container span2 hidden-phone" data-spy="affix" data-offset-top="0">
					<ul class="pager">
					  <li class="next_page_link_container"><%= render 'articles/next_page_link'%></li>
					</ul>
				</div>
			</aside>
		</div>
	</div>
</div>
