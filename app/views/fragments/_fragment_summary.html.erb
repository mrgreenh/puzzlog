<div class="row">
	<div class="span6 fragment_summary" id="fragment_<%= fragment.id %>">
		<div class="row">
			<div class="span2">
				<img src="<%= getFragmentTypeIcon(fragment.fragment_type) %>" title="<%= fragment.fragment_type.name %>" class="fragment_type_image hidden-phone">
				<img src="<%= getFragmentTypeIconThumb(fragment.fragment_type) %>" title="<%= fragment.fragment_type.name %>" class="fragment_type_image visible-phone">
			</div>
			<div class="span4">
				<div class="row">
					<div class="span4">
						<h3><%= link_to fragment.name, fragment_path(fragment) %></h3>
					</div>
				</div>
				<div class="row">
					<div class="span4">
						<table class="table table-striped table-bordered table-hover">
						  <tbody>
						  	<% fragment.getSummaryHash.each do |k,v| %>
							  	<tr>
							      <td class="table-key"><p><%= k %>:</p></td>
							      <td class="table-value"><p><%= v %></p></td>
							    </tr>
						  	<% end %>
						  	<% if fragment.fragment_type.has_images? %>
						  		<tr>
						  			<td colspan="2">
						  				<% fragment.images.each do |image| %>
						  					<%= image_tag image.fragment_resource_file.url(:mini) %>
						  				<% end %>
						  			</td>
						  		</tr>
						  	<% end %>
						  </tbody>
						</table>
					</div>
				</div>
			</div>	
		</div>
		<%
		# TODO mostrare alcune risorse del frammento
		%>
		<%= render 'fragments/popover_controls', fragment: fragment, popover_controls: true %>
	</div>
</div>
