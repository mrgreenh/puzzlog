<div class="fragment_resources_upload_container">	
	<%= form_tag fragment_images_path, method: :post, remote:true, multipart:true do %>
	<ul class="resource_uploading_fields">
		<%= render 'fragment_images/resource_uploader_field' %>
	</ul>
	<%= link_to '#', class:'add_file_field_link' do %>
				<i class="icon icon-plus"></i> Aggiungi un'altra immagine
	<% end %>
	<div class="form-actions">
		<%= render 'box/add_to_box_modal_form' %>
		<div>
			<%= submit_tag 'Start Uploading', class:'btn btn-primary upload_button', "data-loading-text" => "Uploading..." %>
		</div>
	</div>
	<% end %>
</div>
