<% fragment ||= @fragment %>
<script>
	var publication_enabled = <%= can_publish_fragment?(fragment) %>;
</script>
<ul class="nav nav-tabs" id="fragment_<%=fragment.id%>_tab">
  <li class="active"><a href="#fragment_<%=fragment.id%>_view" class="view_tab_link" data-toggle="tab">Preview</a></li>
  <li><a href="#fragment_<%=fragment.id%>_edit" class="edit_tab_link" data-toggle="tab">Edit</a></li>
  <!-- Resources Tabs -->
  <% if fragment.fragment_type.has_images? %>  
  	<li><a href="#fragment_<%=fragment.id%>_images" data-toggle="tab">Images</a></li>
  <% end %>
  <% if fragment.fragment_type.has_sounds? %>  
  	<li><a href="#fragment_<%=fragment.id%>_sounds" data-toggle="tab">Sounds</a></li>
  <% end %>
  <% if fragment.fragment_type.has_videos? %>  
  	<li><a href="#fragment_<%=fragment.id%>_videos" data-toggle="tab">Videos</a></li>
  <% end %>
  <% if fragment.fragment_type.has_untyped_attachments? %>  
  	<li><a href="#fragment_<%=fragment.id%>_untyped_attachments" data-toggle="tab">Attachments</a></li>
  <% end %>
</ul>
<div class="tab-content">
	<div class="tab-pane fade in active fragment_type_<%= fragment.fragment_type.id %> fragment_view" id="fragment_<%=fragment.id%>_view">
		<%= raw(fragment.fragment_type.view_elements) %>
	</div>
	<div class="tab-pane fade in fragment_type_<%= fragment.fragment_type.id %> fragment_edit" id="fragment_<%=fragment.id%>_edit">
		<%= raw(fragment.fragment_type.edit_elements) %>
	</div>
	
	<!-- Resources panels -->
	<% if fragment.fragment_type.has_images? %>
		<div class="tab-pane fade in fragment_images" id="fragment_<%=fragment.id%>_images">
			<%= render 'fragment_images/fragment_panel_controls', fragment: fragment %>
			<ul class="thumbnails">
			
			</ul>
		</div>
	<% end %>
	<% if fragment.fragment_type.has_sounds? %>
		<div class="tab-pane fade in fragment_sounds" id="fragment_<%=fragment.id%>_sounds">
			<h2>Sounds</h2>
		</div>
	<% end %>
	<% if fragment.fragment_type.has_videos? %>
		<div class="tab-pane fade in fragment_videos" id="fragment_<%=fragment.id%>_videos">
			<h2>Videos</h2>
		</div>
	<% end %>
	<% if fragment.fragment_type.has_untyped_attachments? %>
		<div class="tab-pane fade in fragment_untyped_attachments" id="fragment_<%=fragment.id%>_untyped_attachments">
			<h2>Untyped Attachments</h2>
		</div>
	<% end %>
</div>
