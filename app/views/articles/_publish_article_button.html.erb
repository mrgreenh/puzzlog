<%	
	article ||= @article
	republish ||= false
	btn_small ||= false
	remote_bool = true if remote_bool.nil?
%>
<%= link_to publish_article_path(article), remote:remote_bool, class:"btn btn-success #{btn_small ? 'btn-small' : ''} publish_article_button" do %>
	<i class="icon icon-white icon-globe"></i> Publish
<% end unless republish%>

<%= link_to publish_article_path(article), remote:remote_bool, class:"btn btn-info #{btn_small ? 'btn-small' : ''} publish_article_button" do %>
	<i class="icon icon-white icon-repeat"></i> Republish
<% end if republish%>