remote_bool = true
%>
<div class="row article_partial" class="user" id="article_<%= article.id %>">
	<div class="span6">
		<div class="row">
			<div class="span2"><h3><%= link_to article.title, article_path(article) %></h3></div>
		</div>
		<div class="row">
			<div class="span6 article-summary">
				<p>
