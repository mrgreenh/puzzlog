<div class="row">
	<div class="span6 fragment_summary" id="fragment_<%= fragment.id %>">
		<div class="row">
			<div class="span2"><img src="<%= getFragmentTypeIcon(fragment.fragment_type) %>" title="<%= fragment.fragment_type.name %>"></div>
			<div class="span4">
				<div class="row">
					<div class="span4">
						<h3><%= link_to fragment.name, fragment_path(fragment) %></h3>
					</div>
				</div>
				<div class="row">
					<div class="span4">
						<table class="table table-striped table-bordered table-hover">
						  <tbody>
						  	<% fragment.getSummaryHash.each do |k,v| %>
							  	<tr>
							      <td class="table-key"><p><%= k %>:</p></td>
							      <td class="table-value"><p><%= v %></p></td>
							    </tr>
						  	<% end %>
						  </tbody>
						</table>
					</div>
				</div>
			</div>	
		</div>
		
		<%= render 'fragments/popover_controls', fragment: fragment, popover_controls: true %>
	</div>
</div>
